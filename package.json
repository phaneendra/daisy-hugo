{
  "name": "daisy-hugo",
  "version": "1.0.0",
  "description": "Hugo theme with Tailwind and Daisy Ui",
  "main": "index.js",
  "author": "Phaneendra K",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/phaneendra/daisy-hugo.git"
  },
  "bugs": {
    "url": "https://github.com/phaneendra/daisy-hugo/issues"
  },
  "homepage": "https://phaneendra.github.io/daisy-hugo.",
  "keywords": [
    "hugo",
    "hugo-theme",
    "tailwind",
    "dark-mode"
  ],
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.4",
    "autoprefixer": "^10.4.8",
    "daisyui": "^2.24.0",
    "degit": "^2.8.4",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-go-template": "^0.0.13",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.8"
  },
  "scripts": {
    "start": "hugo server --buildDrafts --watch --minify --disableFastRender --themesDir=../.. --source=exampleSite  --baseURL=http://localhost/daisy-hugo/ --port=1313",
    "css:watch": "pnpm tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css --watch",
    "dev": "killall hugo && killall tailwindcss && pnpm css:watch && pnpm start",

    "css:build": "pnpm tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css",
    "site": "hugo --gc --minify --themesDir=../.. --source=exampleSite --config=config.yaml",
    "build": "pnpm css:build && pnpm site"
  }
}
